CREATE DATABASE userdb;
use userdb;
Select * from users;
delete coloums:
TRUNCATE TABLE users;


CREATE database todo;
use todo;
create table TodoList (
todo_id int AUTO_INCREMENT PRIMARY KEY,
todo_tittle VARCHAR(30) NOT NULL,
todo_description varchar(300) not null,
todo_status varchar(20) default 'pending',
todo_targetdate date,
todo_targettime time ,
created_by varchar(110) ,
created_date date,
modified_by varchar(110),
modified_date date
);
select *from ToDoList;

ALTER TABLE Todoist
RENAME TO TodoList;

CREATE TABLE TodoList (
    todo_id INT AUTO_INCREMENT PRIMARY KEY,
    todo_title VARCHAR(30) NOT NULL,
    todo_description VARCHAR(300) NOT NULL,
    todo_status VARCHAR(20) COLLATE utf8mb4_bin,
    todo_targetdate DATE,
    todo_targettime TIME,
    created_by VARCHAR(110),
    created_date DATE,
    modified_by VARCHAR(110),
    modified_date DATE,
    CONSTRAINT fk_status FOREIGN KEY (todo_status) 
        REFERENCES StatusLookup(status_code)
);

CREATE TABLE StatusLookup (
    status_code VARCHAR(20) COLLATE utf8mb4_bin PRIMARY KEY
);

INSERT INTO StatusLookup (status_code)
VALUES ('p'), ('pending'), ('PENDING');
DROP TABLE StatusLookup;
DROP TABLE TodoList;
Select * from ToDoList;